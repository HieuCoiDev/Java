    private void openAdminForm() {
		frmAdminDN manageBooksForm = new frmAdminDN();
	   ;
	    frmMain.dispose();  // Optional: Close the main form when opening the new form
}
    private void openManageBooksForm() {
    		frmSach manageBooksForm = new frmSach();
    		manageBooksForm.setVisible(true);
    	    frmMain.dispose();  // Optional: Close the main form when opening the new form
    }


