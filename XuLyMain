package frm;

import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class XuLy implements ActionListener {

    private MainForm frmMain;

    public XuLy(MainForm mainForm) {
        this.frmMain = mainForm;
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        // Handling menu item and button events
        if (e.getSource() == frmMain.adminItem) {
            openAdminForm();
        } else if (e.getSource() == frmMain.manageBooksItem) {
            openManageBooksForm();
